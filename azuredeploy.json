{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
	"parameters": {
		"Location": { 
			"type": "string", 
			"defaultValue": "North Europe", 
			"allowedValues": [ 
				"East US", 
				"South Central US",
				"North Europe", 
				"West Europe"
			]
		}    
  },
  "variables": {
		"location": "[parameters('Location')]"
  },
  "resources": [
    {
      "apiVersion": "2015-08-01",
      "type": "Microsoft.Web/serverfarms",
      "name": "[concat(resourceGroup().location, '-Plan-Prod')]",
      "location": "[variables('location')]",
      "dependsOn": [ ],
      "sku": {
        "name": "S1",
        "tier": "Standard",
        "size": "S1",
        "family": "S",
        "capacity": 1
      },
      "tags": { },
      "properties": {
        "name": "[concat(resourceGroup().location, '-Plan-Prod')]",
        "numberOfWorkers": 1
      }
    },
    {
      "apiVersion": "2015-08-01",
      "type": "Microsoft.Web/sites",
      "name": "[concat(resourceGroup().location, '-Site-Prod')]",
      "location": "[variables('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', concat(resourceGroup().name, '-Plan-Prod'))]"
      ],
      "tags": { },
      "properties": {
        "serverFarmId": "[concat(resourceGroup().location, '-Plan-Prod')]"
      },
      "resources": [
        {
          "apiVersion": "2015-08-01",
          "type": "slots",
          "name": "Staging",
          "location": "[variables('location')]",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', concat(resourceGroup().location, '-Site-Prod'))]"
          ],
          "properties": {
          }
        }
      ]
    },
    {
      "apiVersion": "2015-08-01",
      "type": "Microsoft.Web/serverfarms",
      "name": "[concat(resourceGroup().location, '-Plan-Test')]",
      "location": "[variables('location')]",
      "dependsOn": [ ],
      "sku": {
        "name": "B1",
        "tier": "Basic",
        "size": "B1",
        "family": "B",
        "capacity": 1
      },
      "tags": { },
      "properties": {
        "name": "[concat(resourceGroup().location, '-Plan-Test')]",
        "numberOfWorkers": 1
      }
    },
    {
      "apiVersion": "2015-08-01",
      "type": "Microsoft.Web/sites",
      "name": "[concat(resourceGroup().location, '-Site-Test')]",
      "location": "[variables('location')]",
      "dependsOn": [
        "[concat('Microsoft.Web/serverfarms/', concat(resourceGroup().location, '-Plan-Test'))]"
      ],
      "tags": {},
      "properties": {
        "name": "[concat(resourceGroup().location, '-Site-Test')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms/', concat(resourceGroup().location, '-Plan-Test'))]"
      }
    },
    {
      "apiVersion": "2014-04-01",
      "type": "microsoft.insights/components",
      "name": "[concat(resourceGroup().location, '-AppInsights')]",
      "location": "[variables('location')]",
      "kind": "web",
      "tags": {},
      "properties": {
        "ApplicationId": "[concat(resourceGroup().location, '-AppInsights')]"
      },
      "resources": [],
      "dependsOn": []
    }
  ],
  "outputs": {
  }
}
